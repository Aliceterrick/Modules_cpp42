NAME		=	horde

BIN_PATH	=	./bin/

CC			=	c++
FLAGS		=	-Wall -Werror -Wextra
FLAGS		+=	-std=c++98
DEPS_FLAGS	=	-MMD -MP

SRCS		=	main.cpp \
				Zombie.cpp \
				zombieHorde.cpp

OBJS		=	$(addprefix $(BIN_PATH), $(SRCS:.cpp=.o))
DEPS		=	$(OBJS:.o=.d)

GREEN		=	\e[92;5;118m
PINK		=	\033[95m
ORANGE		=	\033[38;5;208m
RESET		=	\033[0m

all:	$(NAME)

$(NAME):	$(OBJS)
	@ printf "$(PINK)Compiling...$(RESET)ðŸš§\n" && sleep 1
	@ $(CC) $(FLAGS) $(OBJS) -o $(NAME)
	@ clear && printf "$(GREEN)$(NAME) successfuly compiled!$(RESET)ðŸ§Ÿâž•âž•\n"

$(BIN_PATH)%.o: %.cpp
	@ mkdir -p $(BIN_PATH)
	@ printf "$(PINK)Compiling...$(RESET)ðŸš§\n" && sleep 1
	@ $(CC) $(FLAGS) $(DEPS_FLAGS) -c $< -o $@

clean:
	@ rm -rf $(BIN_PATH)
	@ clear && printf "$(ORANGE)Cleaned!$(RESET)\n"

fclean: clean
	@ rm -f $(NAME)
	@ clear && printf "$(ORANGE)Fully cleaned!$(RESET)\n"

re:	fclean all

-include $(DEPS)
